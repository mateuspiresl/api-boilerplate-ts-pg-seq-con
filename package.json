{
  "name": "boilerplate",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "author": {
    "name": "Mateus Pires",
    "email": "mateusplpl@gmail.com",
    "url": "https://github.com/mateuspiresl"
  },
  "scripts": {
    "build": "tsc",
    "debug": "yarn build && yarn lint && yarn watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "start": "node ./dist/main.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"tsc -w\" \"nodemon dist/main.js\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"tsc -w\" \"nodemon --inspect dist/main.js\""
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build && yarn lint && yarn test:unit"
    }
  },
  "_moduleAliases": {
    "~": "dist"
  },
  "nodemonConfig": {
    "ext": "js, yml"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "module-alias": "^2.2.2",
    "morgan": "1.9.1",
    "pg": "7.18.2",
    "pg-hstore": "2.3.3",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/eslint": "^6.1.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^14.0.22",
    "@types/pg": "^7.14.6",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "concurrently": "^5.0.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-jest": "^3.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "extendify": "1.0.0",
    "glob": "7.1.6",
    "husky": "4.2.3",
    "jest": "^26.5.2",
    "lint-staged": "10.0.7",
    "nodemon": "^1.19.2",
    "prettier": "^2.0.5",
    "remap-istanbul": "0.13.0",
    "rimraf": "3.0.2",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typedoc": "0.16.10",
    "typescript": "^3.8.2",
    "typescript-formatter": "7.2.2"
  }
}
